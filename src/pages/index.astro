    <Fragment slot="content">
      <div id="mc_embed_shell">
        <link href="//cdn-images.mailchimp.com/embedcode/classic-061523.css" rel="stylesheet" type="text/css" />
        <style type="text/css">
          #mc_embed_signup {
            background: #fff;
            clear: left;
            font:
              14px 'Poppins',
              'Helvetica Neue',
              Helvetica,
              Arial,
              sans-serif;
            max-width: 500px;
            padding: 16px;
            border-radius: 8px;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            margin: 0 auto;
          }
          #mc_embed_signup_scroll h2 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 16px;
            text-align: center;
          }
          .waitlist-select, .waitlist-input {
            background-color: #fff;
            border-radius: 4px !important;
            padding: 8px;
            border: 1px solid #ccc !important;
            height: 40px !important;
          }
          .btn-primary {
            border-radius: 99px !important;
            padding: 8px;
            border: 1px solid #ccc;
            height: 48px !important;
            margin-right: 8px !important;
          }
        </style>
        <div id="mc_embed_signup">
          <form
            action="https://crushy.us12.list-manage.com/subscribe/post?u=801f3e334760196f67cc2d80b&id=c302279f53&f_id=004743e0f0"
            method="post"
            id="mc-embedded-subscribe-form"
            name="mc-embedded-subscribe-form"
            class="validate"
            target="_blank"
          >
            <div id="mc_embed_signup_scroll">
              <h2>Crushy has launched in Vancouver! Join our waitlist and get notified as soon as we expand to your place.</h2>
              <!-- <div class="indicates-required"><span class="asterisk">*</span> indicates required</div> -->
              <div class="mc-field-group">
                <label for="mce-EMAIL">Email Address <span class="asterisk">*</span></label>
                <input
                  type="email"
                  name="EMAIL"
                  class="required email waitlist-input"
                  id="mce-EMAIL"
                  required=""
                  value=""
                />
              </div>
              <div class="mc-field-group">
                <label for="mce-MMERGE7">Where do you live? <span class="asterisk">*</span></label>
                <select
                  name="MMERGE7"
                  class="required waitlist-select"
                  id="mce-MMERGE7"
                  >
                    <option value=""></option>
                    <option value="Canada - British Columbia">Canada - British Columbia</option>
                    <option value="Canada - Other Province">Canada - Other Province</option>
                    <option value="USA">USA</option>
                    <option value="Europe">Europe</option>
                    <option value="Somewhere else">Somewhere else</option>
                  </select>
              </div>
              <div id="mce-responses" class="clear foot">
                <div class="response" id="mce-error-response" style="display: none;"></div>
                <div class="response" id="mce-success-response" style="display: none;"></div>
              </div>
              <div aria-hidden="true" style="position: absolute; left: -5000px;">
                /* real people should not fill this in and expect good things - do not remove this or risk form bot
                signups */
                <input type="text" name="b_801f3e334760196f67cc2d80b_c302279f53" tabindex="-1" value="" />
              </div>
              <div class="optionalParent">
                <div class="clear foot">
                  <input type="submit" name="subscribe" id="mc-embedded-subscribe" class="btn-primary w-full rounded-full sm:mb-0" value="Join the waitlist" />
                  <p style="margin: 0px auto;">
                    <a href="http://eepurl.com/i6SRGs" title="Mailchimp - email marketing made easy and fun"
                      ><span style="display: inline-block; background-color: transparent; border-radius: 4px;"
                        ><img
                          class="refferal_badge"
                          src="https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-dark.svg"
                          alt="Intuit Mailchimp"
                          style="width: 220px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center;"
                        /></span
                      ></a
                    >
                  </p>
                </div>
              </div>
            </div>
          </form>
        </div>
        <script type="text/javascript" src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
        <script type="text/javascript">
