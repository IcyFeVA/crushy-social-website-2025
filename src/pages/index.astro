  <Hero
    actions={[]}
    image={{ src: '~/assets/images/hero-friends2.png', alt: 'Hero Image' }}
  >
    <Fragment slot="title">
      The Social Networking App<br />That Puts People First.<br />
      <span class="text-accent highlight">No Algorithms, no AI Bots, no BS.</span>
    </Fragment>

    <Fragment slot="subtitle">
      Whether you're looking for friendship or something more,<br />Crushy helps you connect, your way.
    </Fragment>

    <Fragment slot="content">
      <div class="flex justify-center gap-4 my-8 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        <a href="https://play.google.com/store/apps/details?id=com.crushysocial.crushy" target="_blank" aria-label="Get it on Google Play">
          <Image src={googlePlay} alt="Get it on Google Play" class="h-12" width="161" height="48" />
        </a>
        <a href="https://apps.apple.com/ca/app/crushy-social/id6747401313" target="_blank" aria-label="Download on the App Store">
          <Image src={appStore} alt="Download on the App Store" class="h-12" width="161" height="48" />
        </a>
      </div>
      </Fragment>
  </Hero>

