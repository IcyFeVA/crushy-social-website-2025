  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Why Choose Crushy?"
    subtitle="Most dating and social apps profit by keeping users endlessly swiping, rather than actually helping people connect."
    tagline="Key Features & Benefits"
    classes={{ container: 'max-w-6xl' }}
